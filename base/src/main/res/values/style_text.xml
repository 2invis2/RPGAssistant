<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="NewApi">

    <style name="Headline1">
        <item name="android:textSize">28sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="Headline1.Left">
        <item name="android:gravity">start</item>
    </style>

    <style name="Headline1.Center">
        <item name="android:gravity">center</item>
    </style>

    <style name="Headline2">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Headline2.Center">
        <item name="android:gravity">center</item>
    </style>

    <style name="Headline3">
        <item name="android:textSize">17sp</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Headline3.Center">
        <item name="android:gravity">center</item>
    </style>

    <style name="Text1">
        <item name="android:textSize">17sp</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text1.Main">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Text1.Sec">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Text1.Tert">
        <item name="android:textColor">?android:attr/textColorTertiary</item>
    </style>

    <style name="Text1.Left">
        <item name="android:gravity">start</item>
    </style>

    <style name="Text1.Center">
        <item name="android:gravity">center</item>
    </style>

    <style name="Text2">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="Text2.Main">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.01</item>
    </style>

    <style name="Text2.Main.Center">
        <item name="android:gravity">center</item>
    </style>

    <style name="Text2.Sec">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Text2.Sec.Center">
        <item name="android:gravity">center</item>
    </style>

    <style name="Text2.Tert">
        <item name="android:textColor">?android:attr/textColorTertiary</item>
    </style>

    <style name="Text2.Tert.Center">
        <item name="android:gravity">center</item>
    </style>

</resources>